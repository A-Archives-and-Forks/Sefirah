<ContentDialog
    x:Class="Sefirah.Dialogs.ProcessActionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sefirah.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="{x:Bind IsFormValid, Mode=OneWay}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Save"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="Cancel"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <ScrollViewer MaxHeight="500">
        <StackPanel MinWidth="400" Spacing="12">
            <!--  Action Name  -->
            <TextBox
                x:Name="ActionNameTextBox"
                Header="Action Name"
                PlaceholderText="Enter action name"
                TextChanged="OnFormFieldChanged" />

            <!--  Action Path  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="ActionPathTextBox"
                    Grid.Column="0"
                    Header="Executable Path"
                    PlaceholderText="Path to executable"
                    TextChanged="OnFormFieldChanged" />
                <Button
                    Grid.Column="1"
                    Margin="8,24,0,0"
                    Click="BrowseForExecutable_Click"
                    Content="Browse" />
            </Grid>

            <!--  Arguments  -->
            <TextBox
                x:Name="ArgumentsTextBox"
                Header="Arguments"
                PlaceholderText="Command line arguments (optional)" />

            <!--  Start Directory  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="StartDirectoryTextBox"
                    Grid.Column="0"
                    Header="Start In Directory"
                    PlaceholderText="Working directory (optional)" />
                <Button
                    Grid.Column="1"
                    Margin="8,24,0,0"
                    Click="BrowseForDirectory_Click"
                    Content="Browse" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
